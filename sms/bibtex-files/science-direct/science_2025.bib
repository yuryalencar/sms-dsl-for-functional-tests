author = {Peter M. Senge},
abstract = {This paper discusses system dynamics techniques for formulating and testing dynamic theories of capital investment. The paper includes conceptualization guidelines intended to make investment functions more descriptive of actual decision-making. Also included are model-behavior tests to extend conventional statistical tests by examining the effects of alternative investment hypotheses on behavior of system models. The usefulness of the proposed approach is illustrated by formulating and testing a generalization of the standard neoclassical investment function (SNC). The generalized investment function is shown to include six disequilibrium hypotheses omitted from the SNC and to better fit quarterly data for capital appropriations in durable and nondurable manufacturing industries. Model-behavior tests showing the importance of the six hypotheses are also summarized.}
}
@article{ABLA20082787,
